{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.item": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            {
              "idle": "!query.is_moving"
            }
          ],
          "transitions": [
            {
              "move": "query.is_moving && !variable.attack_time"
            }
          ]
        },
        "move": {
          "animations": ["move"],
          "transitions": [
            {
              "default": "(query.ground_speed == 0.0 && !query.is_delayed_attacking) || (query.mark_variant == 2 && query.is_delayed_attacking)"
            }
          ]
        }
      }
    }
  }
}
